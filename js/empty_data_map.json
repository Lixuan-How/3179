{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Population Density (Data Not Available)",
    "width": 800,
    "height": 600,
    "data": {
      "url": "js/my.topojson",  
      "format": {"type": "topojson", "feature": "my"}
    },
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "transform": [
          {
            "calculate": "'Data is not available for ' + datum.properties.state",
            "as": "note"
          }
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {
          "tooltip": {
            "field": "note"
          }
        }
      },
      {
        "transform": [
          {
            "lookup": "properties.name",
            "from": {
              "data": {
                "url": "Data/population_state.csv"
              },
              "key": "state_name",
              "fields": ["population_density"] 
            }
          }
        ],
        "mark": {"type": "geoshape", "stroke": "white"},
        "encoding": {
          "color": {
            "field": "population_density",
            "type": "quantitative",
            "scale": {
              "scheme": "blues" 
            }
          },
          "tooltip": [
            {"field": "properties.state", "type": "nominal", "title": "State"},
            {"field": "population_density", "type": "quantitative", "title": "Population Density"}
          ]
        }
      }
    ]
  }
  
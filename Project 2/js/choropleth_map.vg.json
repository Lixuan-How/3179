{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Population Density of Malaysia States (1987)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "js/my.topojson",
    "format": {"type": "topojson", "feature": "my"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {"url": "data/temporary_normalised_population_2022.csv"},
        "key": "state",
        "fields": ["population_density"]
      }
    },
    {"calculate": "datum.population_density + 0.1", "as": "population density"}  
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "population_density",
      "type": "quantitative",
      "scale": {"type": "log", "scheme": "blues"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "population_density", "type": "quantitative"}
    ]
  }
}

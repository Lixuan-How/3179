{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/Lixuan-How/3179/refs/heads/main/Project%202/Data/normalised_population_density.csv"
    },
    "vconcat": [
      {
        "width": "container",
        "height": 400,
        "title": "Population Density in 2022 of Overall Ethnicities, Ages, and Genders",
        "transform": [
          { "filter": "datum.year == 2022" },
          { "filter": "datum.age == 'overall'" },
          { "filter": "datum.ethnicity == 'overall'" },
          { "filter": "datum.sex == 'female'" },
          { "calculate": "(datum.population_thousands * 1000) / datum.land_size_sq_km", "as": "Density" }
        ],
        "mark": "bar",
        "encoding": {
          "x": { "field": "state", "type": "nominal", "title": null },
          "y": { "field": "Density", "type": "quantitative" },
          "tooltip": [
            { "field": "state", "type": "nominal", "title": "State" },
            { "field": "land_size_sq_km", "type": "quantitative", "title": "Land Size (km²)", "format": ".2f" },
            { "field": "population_thousands", "type": "quantitative", "title": "Population (thousands)", "format": ".2f" },
            { "field": "Density", "type": "quantitative", "title": "Population Number per km²", "format": ".2f" },
            { "field": "year", "type": "quantitative", "title": "Year" },
            { "field": "age", "type": "nominal", "title": "Age Group" },
            { "field": "ethnicity", "type": "nominal", "title": "Ethnicity" },
            { "field": "sex", "type": "nominal", "title": "Sex" }
          ]
        }
      },
      {
        "width": "container",
        "height": 400,
        "projection": { "type": "equalEarth" },
        "data": {
          "url": "https://raw.githubusercontent.com/Lixuan-How/3179/refs/heads/main/Project%202/js/my.topojson",
          "format": { "type": "topojson", "feature": "my" }
        },
        "transform": [
          {
            "lookup": "properties.name",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/Lixuan-How/3179/refs/heads/main/Project%202/Data/temporary_normalised_population_2022.csv"
              },
              "key": "state",
              "fields": ["land_size_sq_km", "population_thousands"]
            }
          },
          { "calculate": "(datum.population_thousands * 1000) / datum.land_size_sq_km", "as": "Density" }
        ],
        "mark": { "type": "geoshape" },
        "encoding": {
          "color": {
            "field": "Density",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [20, 50, 100, 500, 1000, 8000],
              "range": [
                "#ffebeb",
                "#ffc4c4",
                "#ff8989",
                "#ff6262",
                "#ff1414",
                "#d80000",
                "#890000"
              ]
            }
          },
          "tooltip": [
            { "field": "properties.name", "type": "nominal", "title": "State" },
            { "field": "land_size_sq_km", "type": "quantitative", "title": "Land Size (km²)", "format": ".2f" },
            { "field": "population_thousands", "type": "quantitative", "title": "Population (thousands)", "format": ".2f" },
            { "field": "Density", "type": "quantitative", "title": "Population Number per km²", "format": ".2f" }
          ]
        }
      }
    ],
    "config": {
      "title": {
        "font": "sans-serif",
        "fontSize": 14
      }
    }
  }
  